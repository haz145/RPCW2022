extends layout

block content
  
  .w3-container.w3-margin
    .w3-card-4
      header.w3-container.w3-teal
        h3 File Submission

      form.w3-container.w3-margin(style="padding:10px", method="post", action="/update")
        .w3-row.w3-margin-bottom
          .w3-col.s2
            b
              label.w3-text-teal File:
          .w3-col.s6
            input(type="file", name="name")

        .w3-row.w3-margin-bottom
          .w3-col.s2
            b
              label.w3-text-teal File Description:
          .w3-col.s9.w3-border
            input.w3-input(type="text", name="desc")

        .w3-row.w3-margin-top
            input.w3-btn.w3-teal(type="submit", value="Add")

  .w3-container.w3-margin
    .w3-card-4
      header.w3-container.w3-teal
        h3 Files List
      .w3-container(style="padding:10px 80px")
        if data.length > 0
          table.w3-table-all
            tr 
              th(style="width:0;white-space:nowrap")
              th Name
              th Description
            each f in data
              tr
                td 
                  form(method="get", action="/delete/" + f.id)
                    b 
                      input(type="submit", value="X")
                td= f.name
                td= f.desc
        else
          p There are no files...