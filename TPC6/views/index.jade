extends layout

block content
  
  .w3-container.w3-margin
    .w3-card-4
      header.w3-container.w3-teal
        h3 Form Submission

      form.w3-container.w3-margin(style="padding:10px", method="post", action="/update")
        .w3-row.w3-margin-bottom
          .w3-col.s3
            b
              label.w3-text-teal File Name:
          .w3-col.s9.w3-border
            input.w3-input(type="text", name="name")

        .w3-row.w3-margin-bottom
          .w3-col.s3
            b
              label.w3-text-teal File Description:
          .w3-col.s9.w3-border
            input.w3-input(type="text", name="desc")

        .w3-row.w3-margin-top
            input.w3-btn.w3-teal(type="submit", value="Add")

  .w3-container.w3-margin
    .w3-card-4
      header.w3-container.w3-teal
        h3 Files List
      .w3-container(style="padding:10px")
        if data.length > 0
          table.w3-table-all
            tr 
              th Name
              th Description
              th
            each f in data
              tr
                td= f.name
                td= f.desc
                td 
                  form(method="get", action="/delete/" + f.id)
                    b 
                      input.w3-btn(type="submit", value="X")
        else
          p There are no files...